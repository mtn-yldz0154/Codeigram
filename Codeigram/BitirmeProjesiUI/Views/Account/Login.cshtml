@model AccountModel


@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website With Login & Registration | Codehal</title>
    <link rel="stylesheet" href="~/style3.css">
</head>

<body>

    <header>
    </header>


    <div class="wrapper active-popup">
        <span class="icon-close">
            <ion-icon name="close"></ion-icon>
        </span>

        <div class="form-box login">
            <h2>Login</h2>
            <form asp-controller="Account" asp-action="Login" method="post" >
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail"></ion-icon></span>
                    <input type="text" asp-for="LoginModel.UserName">
                    <label>E-mail</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                    <input asp-for="LoginModel.Password" type="password">
                    <label>Parola</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">Beni Hatırla</label>
                    <a href="#">Forgot Password?</a>
                </div>
                <button type="submit" class="btn">Login</button>
                <div class="login-register">
                    <p>Don't have an acccount? <a href="#" class="register-link">Register</a></p>
                </div>
            </form>
        </div>

        <div class="form-box register">
            <h2>Register</h2>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All"></div>
              
                  <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input asp-for="RegisterModel.Name" type="text">
                    <label>Name</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input asp-for="RegisterModel.LastName" type="text">
                    <label>Lastname</label>
                </div>
                
              
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input asp-for="RegisterModel.UserName" type="text">
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail"></ion-icon></span>
                    <input asp-for="RegisterModel.Email" type="email">
                    <label>E-mail</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                    <input asp-for="RegisterModel.Password" type="password">
                    <label>Parola</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">I agree to the terms & conditions</label>
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Already have an acccount? <a href="#" class="login-link">Login</a></p>
                </div>
            </form>
        </div>
    </div>

















    <script src="~/script1.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


</body>
</html>
